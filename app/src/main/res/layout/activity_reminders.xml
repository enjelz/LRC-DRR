<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    tools:context=".users.RemindersActivity">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reminders_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:text="Reminders"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reminders_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Please read the following reminders below"
                android:textSize="16sp"
                android:textStyle="italic" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="#927d52">

                <TextView
                    android:id="@+id/reminders_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rules and Regulations"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/reminders_cardview_typing_area"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="#161f48">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:justificationMode="inter_word"
                            android:text="1. Reservation is on a first-come, first-served basis.  "
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:justificationMode="inter_word"
                            android:text="2. Requester may reserve the facility at  a week before the intended schedule of reservation."
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:justificationMode="inter_word"
                            android:text="3. A maximum of three (3) reservations per week shall be made per requester. The librarian has the right to limit the number of reservations during peak season. "
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:justificationMode="inter_word"
                            android:text="4. Depending on the purposes or activity, the Librarian has the right to cancel or revoke the confirmed reservation in case of misrepresentation and violation of the policies rules and regulations."
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:justificationMode="inter_word"
                            android:text="5. If there is no conflict in the schedule, the Librarian shall temporarily book the said reservation. "
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:justificationMode="inter_word"
                            android:text="6. The reservation of the Discussion/Function rooms in non-transferrable."
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:justificationMode="inter_word"
                            android:text="7. The requestor has the responsibility to inform the LRC as soon as possible for cancellation of facility reservation, this is to give the time allotment to other requester. Only the person who signed the reservation form has the right to cancel the confirmed reservation at least twenty-four (24) hours before the schedule date. "
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:justificationMode="inter_word"
                            android:text="8. The confirmation of the reservation shall be made upon receipt of duly approved reservation form. The reservation form must be returned to the Librarian for final confirmation.  "
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:justificationMode="inter_word"
                            android:text="9. The requestor shall completely fill-out the reservation form and have it signed by Class adviser/Department or Program Chair/College Dean. "
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            android:text="10. The submission of the signed form shall be made at least a minimum of 24 hours before the intended event. The lack of the form submitted shall make the pencil booking irrelevant and cancelled. The reservation shall be given to the other requestors."
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:justificationMode="inter_word" />

                        <TextView
                            android:id="@+id/txt11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            android:text="11. The use of the Discussion/Function Rooms can only be made if there is an approval. If there is no approval, then the LRC personnel have the right to reject the pencil booking made and give the slot to another requester. "
                            android:textSize="16sp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/txt12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            android:text="12. Clean as you go (CLAYGO)."
                            android:textSize="16sp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/txt13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            android:text="NOTE: The DISCUSSION ROOM is intended for meetings, presentations, and other group activities. Reservation must be one day before the schedule or first come first"
                            android:textSize="16sp"
                            android:textColor="@color/white"/>

                        <CheckBox
                            android:id="@+id/reminders_i_agree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="I agree"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/reminders_button_back"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:backgroundTint="#161f48"
            android:text="Back"
            android:textSize="16sp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/reminders_button_reserve"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#927d52"
            android:onClick="btn_reminders_reserve"
            android:text="Reserve"
            android:textSize="16sp"
            app:cornerRadius="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>