<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    tools:context=".users.RemindersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4E4E4"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="63dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reminders_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:text="Reminders"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reminders_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Please read the following reminders below"
                android:textSize="15sp"
                android:textStyle="italic" />

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="37dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#927d52">

                <TextView
                    android:id="@+id/reminders_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="8dp"
                    android:text="Use of Discussion Room"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/reminders_cardview_typing_area"
                android:layout_width="350dp"
                android:layout_height="410dp"
                android:layout_marginStart="30dp"
                app:cardBackgroundColor="#161f48">

                <CheckBox
                    android:id="@+id/reminders_i_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:layout_marginTop="360dp"
                    android:text="I agree"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/reminders_button_back"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#161f48"
                android:text="Back"
                app:cornerRadius="10dp" />


            <Button
                android:id="@+id/reminders_button_reserve"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#927d52"
                android:text="Reserve"
                app:cornerRadius="10dp"
                android:onClick="btn_reminders_reserve"/>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>